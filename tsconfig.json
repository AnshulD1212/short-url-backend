{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2021",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "outDir": "dist",
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true
  },
  "lib": ["es2021"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
